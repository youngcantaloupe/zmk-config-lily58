        compatible = "zmk,keymap";

        layer_0 {
            bindings = <
&kp ESC    &kp N1  &kp N2  &kp N3  &kp N4    &kp N5                                           &kp N6     &kp N7    &kp N8     &kp N9   &kp N0    &kp MINUS
&kp ESC    &kp Q   &kp W   &kp E   &kp R     &kp T                                            &kp Y      &kp U     &kp I      &kp O    &kp P     &kp BSPC
